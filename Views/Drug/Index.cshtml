@model List<Medics.Models.Drug.DrugViewModel>

@{
    ViewData["Title"] = "Drug List";
    int count = 1;
}

@await Html.PartialAsync("_ListAlert", Model)

@*<div>
     <a asp-controller="Drug" asp-action="Create" class="btn btn-outline-primary">Add New Drug</a>
</div>
*@
@if (Model is not null)
{
    <table class="table">
         <thead>
              <tr>
                   <th scope="col">#</th>
               @* @if (User.IsInRole("Admin"))*@
                
                   <th scope="col">DrugName</th>
                
                   <th scope="col">Description</th>
                   <th scope="col">Action</th>
              </tr>
         </thead>

         <tbody>
            @foreach (var item in Model)
            {
                  <tr>
                       <td scope="row">@count</td>
                    @if (User.IsInRole("Admin"))
                    {
                           <td scope="row">@item.Drugs</td>
                    }
                       <td scope="row">@item.Description</td>
                       <td scope="row">@item.Quantity
                           
                            <div class="btn-group">
                                 <a asp-controller="Drug" asp-action="GetDrugDetail" asp-route-id="@item.Id" class="btn btn-primary">View Drug</a>
                            </div>
                       </td>
                  </tr>
                count++;
            }
         </tbody>
    </table>
}

