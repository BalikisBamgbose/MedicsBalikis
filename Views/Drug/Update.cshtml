@model Medics.Models.Drug.DrugViewModel
@{
	ViewData["Title"] = "Modify Drug";
}
<div class="body">
	 <div class="row">
		  <div class="col-md-6">
			   <form asp-action="Update">
					<div class="col-md-12 mb-3">
						 <label asp-for="DrugName" class="control-label"></label>
						 <textarea asp-for="DrugName" type="text" class="form-control"></textarea>
						 <span asp-validation-for="DrugName" class="text-danger"></span>
					</div>
					<div class="col-md-12 mb-3">
						 <label asp-for="Prices" class="control-label"></label>
						 <textarea asp-for="Prices" type="text" class="form-control"></textarea>
						 <span asp-validation-for="Prices" class="text-danger"></span>
					</div>
					<div class="col-md-12 mb-3">
						 <label asp-for="Quantity" class="control-label"></label>
						 <textarea asp-for="Quantity" type="text" class="form-control"></textarea>
						 <span asp-validation-for="Quantity" class="text-danger"></span>
					</div>

					<div class="col-md-12 mb-3">
						 <label asp-for="ImageUrl" class="control-label"></label>
						 <input asp-for="ImageUrl" type="file" class="form-control" />
						 <span asp-validation-for="ImageUrl" class="text-danger"></span>
					</div>

					<div class="col-md-12">
						 <button type="submit" class="btn btn-primary">Modify</button>
					</div>
			   </form>
		  </div>
	 </div>
</div>
