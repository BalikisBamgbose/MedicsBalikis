@{
    ViewData["Title"] = "Create New Incoming List";
}

<div class="body">

     <div class="row">
          <div class="col-md-6">
               <form asp-action="CreateIncoming">
                    <div class="col-md-12 mb-2">
                         <label for="Name" class="form-label">SupplierName:</label>
                         <input type="text" class="form-control" placeholder="Enter Incoming Item" name="SupplyName">
                    </div>
                    <div class="col-md-12 mb-2">
                         <label for="ItemName" class="form-label">ItemName:</label>
                         <input type="text" class="form-control" placeholder="Enter Item Name" name="ItemName">
                    </div>
                    <div class="col-md-12 mb-2">
                         <label for="InvoiceNo" class="form-label">InvoiceNo:</label>
                         <input type="text" class="form-control" placeholder="Enter Incoming Item InvoiceNo" name="InvoiceNo">
                    </div>
                    <div class="col-md-12 mb-2">
                         <label for="SupplyDate" class="form-label">SupplyDate:</label>
                         <input type="text" class="form-control" placeholder="Enter Incoming Item SupplyDate" name="SupplyDate">
                    </div>

                    <div class="col-md-12 mb-2">
                         <label for="Quantity" class="form-label">Quantity:</label>
                         <textarea class="form-control" placeholder="Enter Quantity" name="Quantity"></textarea>
                    </div>

                    <div class="col-md-12">
                         <button type="submit" class="btn btn-primary">Create Incoming</button>
                    </div>
               </form>
          </div>
     </div>
</div>